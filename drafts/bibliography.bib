doi = {10.1073/pnas.1115944109},
file = {:Users/juanpablochauvin/Dropbox/Reference/Topics/Rural-urban migration/Gray, Mueller - 2012 - Natural disasters and population mobility in Bangladesh.pdf:pdf},
issn = {00278424},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Environmental migrant,Internally displaced persons,Natural hazards},
number = {16},
pages = {6000--6005},
title = {{Natural disasters and population mobility in Bangladesh}},
volume = {109},
year = {2012}
}
