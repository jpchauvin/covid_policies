pages = {2137--2164},
title = {{Do low-income housing subsidies increase the occupied housing stock?}},
url = {http://www.sciencedirect.com/science/article/pii/S0047272704001811 http://pdn.sciencedirect.com.ezp-prod1.hul.harvard.edu/science?{\_}ob=MiamiImageURL{\&}{\_}cid=271705{\&}{\_}user=209690{\&}{\_}pii=S0047272704001811{\&}{\_}check=y{\&}{\_}origin=article{\&}{\_}zone=toolbar{\&}{\_}coverDate=31-Dec-20},
volume = {89},
